<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="@color/cardBackgroundColor"
    card_view:cardCornerRadius="2dp"
    android:id="@+id/containerView"
    android:foreground="@drawable/custom_bg"
    android:clickable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/storyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/cardViewTitleColor"/>

        <TextView
            android:id="@+id/storySubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/storyTitle"
            android:layout_margin="5dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/cardViewSubTitleColor"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>